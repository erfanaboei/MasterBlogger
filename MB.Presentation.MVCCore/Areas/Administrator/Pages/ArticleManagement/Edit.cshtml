@page "{id:long}"
@model MB.Presentation.MVCCore.Areas.Administrator.Pages.ArticleManagement.EditModel
@{
}
<div class="card">
    <div class="card-header">
        <h2>Edit Article</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Article.Id" />
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Article.Title">Title</label>
                            <input asp-for="Article.Title" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Article.ShortDescription">ShortDescription</label>
                            <input asp-for="Article.ShortDescription" class="form-control" rows="2" />
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Article.Image">Image</label>
                            <input asp-for="Article.Image" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Article.Content">Content</label>
                            <textarea asp-for="Article.Content" class="form-control" rows="5"></textarea>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Article.ArticleCategoryId">ArticleCategory</label>
                            <select asp-for="Article.ArticleCategoryId" asp-items="Model.ArticleCategories" id="ArticleCategoryId" class="form-control">
                                <option value="0">SelectArticleCategory</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Save" />
                        <a class="btn btn-dark" asp-page="./List" asp-area="Administrator">Back To List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>